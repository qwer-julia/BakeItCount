<div class="px-4 md:px-0 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    @foreach (var flavor in Model.Flavors)
    {
        <div class="rounded-2xl p-4 border-3 border-cocoa flex">
            <label class="flex items-center cursor-pointer font-bungee text-lg md:text-2xl text-cocoa gap-3 md:gap-4 flex-1 min-w-0">
                <input type="checkbox"
                       name="SelectedFlavors"
                       value="@flavor.FlavorId"
                       class="flavor-checkbox w-5 h-5 text-blue-600 rounded border-gray-300 flex-shrink-0" />
                <span class="min-w-0">
                    <strong class="break-words">@flavor.Name</strong><br />
                    <small class="text-gray-600 text-peach text-sm md:text-base">@flavor.Description</small>
                </span>
            </label>
            <span class="text-mint ml-auto whitespace-nowrap text-lg md:text-2xl">@flavor.Votes</span>
        </div>
    }
</div>