@page "/ranking"
@model BakeItCountWeb.Pages.Pair.IndexModel
@{
}

<div class="mx-auto my-6 md:my-10 px-4 md:px-0 flex gap-2 text-cocoa items-start">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="size-8 md:size-10 mt-1 md:mt-2 flex-shrink-0">
        <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 18.75h-9m9 0a3 3 0 0 1 3 3h-15a3 3 0 0 1 3-3m9 0v-3.375c0-.621-.503-1.125-1.125-1.125h-.871M7.5 18.75v-3.375c0-.621.504-1.125 1.125-1.125h.872m5.007 0H9.497m5.007 0a7.454 7.454 0 0 1-.982-3.172M9.497 14.25a7.454 7.454 0 0 0 .981-3.172M5.25 4.236c-.982.143-1.954.317-2.916.52A6.003 6.003 0 0 0 7.73 9.728M5.25 4.236V4.5c0 2.108.966 3.99 2.48 5.228M5.25 4.236V2.721C7.456 2.41 9.71 2.25 12 2.25c2.291 0 4.545.16 6.75.47v1.516M7.73 9.728a6.726 6.726 0 0 0 2.748 1.35m8.272-6.842V4.5c0 2.108-.966 3.99-2.48 5.228m2.48-5.492a46.32 46.32 0 0 1 2.916.52 6.003 6.003 0 0 1-5.395 4.972m0 0a6.726 6.726 0 0 1-2.749 1.35m0 0a6.772 6.772 0 0 1-3.044 0" />
    </svg>
    <h1 class="font-bungeeInline text-4xl md:text-6xl text-left">RANKING</h1>
</div>

<ul class="my-6 md:my-10 px-4 md:px-0 text-base md:text-xl font-bold flex flex-col gap-2 max-w-4xl">
    @for (int i = 0; i < Model.PairList.Count; i++)
    {
        var pair = Model.PairList[i];
        <li class="py-2 px-4 md:px-6 border-cocoa border-2 rounded-full flex gap-2 items-center">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 md:size-8 text-peach flex-shrink-0">
                <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
                <text x="50%" y="55%" text-anchor="middle" dominant-baseline="middle"
                      font-size="10" fill="white" font-family="Arial">
                    @(i + 1)
                </text>
            </svg>
            <span class="text-cocoa truncate flex-1 min-w-0">
                <a class="hover:underline hover:text-mint" href="@($"user/{pair.UserId1}")">@pair.User1.Name</a> &
                <a class="hover:underline hover:text-mint" href="@($"user/{pair.UserId2}")">@pair.User2.Name</a>
            </span>
            <span class="text-mint ml-auto whitespace-nowrap text-sm md:text-xl">@pair.PurchasesQuantity</span>
        </li>
    }
</ul>
