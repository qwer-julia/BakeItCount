        <a class="text-cocoa font-bungeeShade text-4xl md:text-6xl hover:text-cocoa my-10" href="/Authenticated">
            BAKE IT COUNT.
        </a>

        <!-- Desktop Menu -->
        <div class="hidden md:flex ml-auto font-bungee gap-4 my-10">
            <a class="text-cocoa border-cocoa border-3 rounded-2xl p-2 text-2xl hover:bg-cocoa hover:text-beige cursor-pointer" href="/purchase">
                HISTÓRICO
            </a>
            <a class="text-cocoa border-cocoa border-3 rounded-2xl p-2 text-2xl hover:bg-cocoa hover:text-beige cursor-pointer" href="/ranking">
                RANKING
            </a>
            <a class="text-beige border-mint border-3 rounded-2xl p-2 font-mint text-2xl bg-mint
