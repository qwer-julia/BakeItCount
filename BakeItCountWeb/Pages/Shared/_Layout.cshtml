@using System.IdentityModel.Tokens.Jwt
@using BakeItCountWeb.DTOs
@{
    var isLogged = false;
    if (Context.Request.Cookies.TryGetValue("AuthToken", out var token))
    {
        var handler = new JwtSecurityTokenHandler();
        var jwt = handler.ReadJwtToken(token);
        isLogged = jwt.ValidTo > DateTime.Now;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BakeItCountWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BakeItCountWeb.styles.css" asp-append-version="true" />
    <link href="~/css/output.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Inline&family=Bungee&family=Bungee+Shade&display=swap" rel="stylesheet">

</head>
<body class="bg-beige">
    <header>
        @await Component.InvokeAsync("CurrentUser")
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>