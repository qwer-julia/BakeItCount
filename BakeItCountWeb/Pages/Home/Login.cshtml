@page "/Login"
@model BakeItCountWeb.Pages.Home.LoginModel
@{
}

<div class="my-10 md:my-20 px-4 md:px-0">
    <div class="text-lg md:text-xl p-4 md:p-5 mx-auto flex flex-col border-2 border-cocoa rounded-2xl gap-4 max-w-xl text-cocoa font-semibold">
        <h1 class="text-3xl md:text-4xl text-center font-bungeeInline text-cocoa">login</h1>
        <form method="post">
            <div>
                <p class="my-1">E-mail</p>
                <input asp-for="Email" class="border-2 border-cocoa rounded-lg p-2 md:p-3 w-full text-cocoa bg-beige text-base" type="email" />
                <span class="text-red-600 text-sm">@Html.ValidationMessageFor(m => m.Email)</span>
            </div>
            <div class="mt-4">
                <p class="my-1">Senha</p>
                <input asp-for="Password" class="border-2 border-cocoa rounded-lg p-2 md:p-3 w-full bg-beige text-base" type="password" />
                <span class="text-red-600 text-sm">@Html.ValidationMessageFor(m => m.Password)</span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p class="text-red-600 font-semibold mt-2">@Model.ErrorMessage</p>
            }

            <div class="flex gap-2 w-full mt-6">
                <button type="submit" class="w-full bg-beige p-3 rounded-xl border-2 border-mint text-mint font-bold hover:text-beige hover:bg-mint text-lg md:text-xl transition-colors">
                    Entrar
                </button>
            </div>
        </form>
    </div>
</div>
